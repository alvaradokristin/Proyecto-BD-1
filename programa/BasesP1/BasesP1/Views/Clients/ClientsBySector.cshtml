@{
    ViewData["Title"] = "Información de clientes por sector";
}

<h1>@ViewData["Title"]</h1>

<main id="main">
    <div class="container">
        <div class="mb-3">
            <label for="client-sector" class="form-label">Sector:</label>
            <select class="form-select" id="client-sector" name="client-sector" style="width: auto">
                @foreach (var item in Model.sectors)
                {
                    <option value="@item.nombre">@item.nombre</option>
                }
            </select>
            <td>
                <input type="button" value="buscar" class="btn btn-" onclick="location.href='@Url.Action("deleteClient", "Clients")?codigo=' + document.getElementById('codigo').value" />
            </td>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Nombre de cuenta</th>
                    <th scope="col">Correo electrónico</th>
                    <th scope="col">Contacto principal</th>
                    <th scope="col">Moneda</th>
                    <th scope="col">Telefono</th>
                    <th scope="col">Celular</th>
                    <th scope="col">Sitio Web</th>
                    <th scope="col">Información adicional</th>
                    <th scope="col">Nombre de usuario</th>
                    <th scope="col">Zona</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
        </table>
    </div>
</main>

<h1>@ViewData["Title"]</h1>

@*FORM TO GET THE USER INPUT TO ADD TO THE DATABASE*@
<form asp-action="addProduct" asp-controller="Products" method="post">
    <div class="mb-3">
        <label for="prod-code" class="form-label">Código de producto:</label>
        <input type="text" class="form-control" id="Codigo" name="Codigo">
    </div>
    <div class="mb-3">
        <label for="prod-name" class="form-label">Nombre del producto:</label>
        <input type="text" class="form-control" id="Nombre" name="Nombre">
    </div>
    @*<div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" value="" id="Activo" name="Activo">
        <label class="form-check-label" for="prod-active">
            Activo
        </label>
    </div>*@
    <div class="mb-3">
        <label for="prod-active" class="form-label">Activo:</label>
        <input type="text" class="form-control" id="Activo" name="Activo" placeholder="true">
    </div>
    <div class="mb-3">
        <label for="prod-desc" class="form-label">Descripción del producto:</label>
        <textarea class="form-control" id="Descripcion" rows="3" name="Descripcion"></textarea>
    </div>
    <div class="mb-3">
        <label for="prod-family" class="form-label">Familia del producto:</label>
        <select class="form-select" id="CodigoFamilia" name="CodigoFamilia">
            <option selected> </option>
            @foreach (var item in Model.Families)
            {
                <option value="@item.Codigo">@item.Nombre</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label for="prod-price" class="form-label">Precio estandar:</label>
        <input type="text" class="form-control" id="PrecioEstandar" name="PrecioEstandar">
    </div>
    <button type="submit" class="btn btn-outline-secondary">Agregar</button>
</form>
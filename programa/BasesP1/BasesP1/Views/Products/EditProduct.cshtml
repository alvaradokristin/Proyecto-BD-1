
<h1>@ViewData["Title"]</h1>

@*FORM TO GET THE USER INPUT TO ADD TO THE DATABASE*@
<form asp-action="editProduct" asp-controller="Products" method="post">
    <div style="display:none">
        <label for="prod-code" class="form-label">Código original:</label>
        <input type="text" class="form-control" id="CodigoOriginal" name="CodigoOriginal" value="@Model.Product.Codigo">
    </div>
    <div class="mb-3">
        <label for="prod-code" class="form-label">Código de producto:</label>
        <input type="text" class="form-control" id="Codigo" name="Codigo" value="@Model.Product.Codigo">
    </div>
    <div class="mb-3">
        <label for="prod-name" class="form-label">Nombre del producto:</label>
        <input type="text" class="form-control" id="Nombre" name="Nombre" value="@Model.Product.Nombre">
    </div>
    <div class="mb-3">
        <label for="prod-active" class="form-label">Activo:</label>
        <input type="text" class="form-control" id="Activo" name="Activo" value="@Model.Product.Activo.ToString()">
    </div>
    <div class="mb-3">
        <label for="prod-desc" class="form-label">Descripción del producto:</label>
        <textarea class="form-control" id="Descripcion" rows="3" name="Descripcion">@Model.Product.Descripcion</textarea>
    </div>
    <div class="mb-3">
        <label for="prod-family" class="form-label">Familia del producto:</label>
        <select class="form-select" id="CodigoFamilia" name="CodigoFamilia" value="@Model.Product.CodigoFamilia">
            @foreach (var item in Model.Families)
            {
                <option value="@item.Codigo">@item.Nombre</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <label for="prod-price" class="form-label">Precio estandar:</label>
        <input type="number" class="form-control" id="PrecioEstandar" name="PrecioEstandar" value="@Model.Product.PrecioEstandar">
    </div>
    <button type="submit" class="btn btn-outline-secondary">Actualizar</button>
</form>
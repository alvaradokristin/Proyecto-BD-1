@{
    ViewData["Title"] = "Productos disponibles";
}

<h1>@ViewData["Title"]</h1>


@*TABLE TO SHOW THE INFORMATION FROM THE SQL TABLE*@
<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Codigo</th>
                <th>Activo</th>
                <th>Descripcion</th>
                <th>Precio</th>
                <th>Codigo Familia</th>
                <th>Accion</th>
            </tr>
        </thead>

        <tbody>
            @*CREATE THE TABLES ROWS AND ASSIGN THEM THE INFORMATION FROM THE DB*@
            @foreach (var item in Model.listApps)
            {
                <tr>
                    <td>@item.name</td>
                    <td>@item.codeo</td>
                    <td>@item.active</td>
                    <td>@item.descripcion</td>
                    <td>@item.price</td>
                    <td>@item.family</td>

                    @*ADD A BUTTON TO DELETE THAT APP FROM THE BD*@
                    <td>
                        <a class="btn btn-outline-danger" href="/Edit/EditProduct?code=@item.codigo">Editar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
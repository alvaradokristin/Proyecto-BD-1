
<h1>@ViewData["Title"]</h1>

<br />

@*TABLE TO SHOW THE INFORMATION FROM THE SQL TABLE*@
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                @foreach (var header in Model.Headers)
                {
                    <th>@header</th>
                }
            </tr>
        </thead>

        <tbody>
            @*CREATE THE TABLES ROWS AND ASSIGN THEM THE INFORMATION FROM THE DB*@
            @foreach (var item in Model.Users)
            {
                <tr>
                    <td>@item.userLogin</td>
                    <td>@item.cedula</td>
                    <td>@item.nombreCompleto</td>
                    <td>@item.nombre_rol</td>
                    <td>@item.codigo_departamento</td>

                    @*ADD A BUTTON TO DELETE THAT APP FROM THE BD*@
                    <td>
                        <a class="btn btn-outline-danger" href="/Edit/EditProduct?code=@item.userLogin">Editar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>